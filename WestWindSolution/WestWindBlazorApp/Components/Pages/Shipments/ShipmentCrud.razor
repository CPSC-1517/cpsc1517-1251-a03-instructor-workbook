@page "/shipments/crud/{ShipmentId:int?}"
@using WestWindSystem.BLL
@using WestWindSystem.Entities
@inject ShipmentServices CurrentShipmentService
@inject OrderServices CurrentOrderService
@inject ShipperServices CurrentShipperService
@inject IJSRuntime CurrentJSRuntime
@inject NavigationManager CurrentNavigationManager

<PageTitle>Manage Shipments</PageTitle>

<h3>Manage Shipments</h3>

@if (!string.IsNullOrEmpty(_feedback))
{
    <div class="alert alert-info mt-3">
        @_feedback
    </div>
}

<EditForm Model="_currentShipment" OnValidSubmit="SaveAsync">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="mb-3">
        <label class="form-label" for="OrderID">OrderID</label>
        <InputNumber class="form-control"
                     @bind-Value="_currentShipment.OrderID" />
        <ValidationMessage For="@(() => _currentShipment.OrderID)" />
    </div>

    <div class="mb-3">
        <label class="form-label">Shipped Date</label>
        <InputDate class="form-control"
                     @bind-Value="_currentShipment.ShippedDate" />
    </div>

    <div class="mb-3">
        <label class="form-label" for="ShipVia">ShipperID</label>
        <InputSelect id="ShipVia" class="form-select" @bind-Value="_currentShipment.ShipVia">
            <option value="0">-- select a shipper --</option>
            @foreach(var currentShipper in _shippers)
            {
                <option value="@currentShipper.ShipperID">@currentShipper.CompanyName</option>
            }
        </InputSelect>
        <ValidationMessage For="@(() => _currentShipment.ShipVia)" />
    </div>

    <div class="mb-3">
        <label class="form-label">Freight Charge</label>
        <InputNumber class="form-control"
                     @bind-Value="_currentShipment.FreightCharge" />
    </div>

    <button type="submit" class="btn btn-primary me-2">
        @(EditMode ? "Save Changes" : "Create")
    </button>

    @if (EditMode)
    {
        <button type="button" 
            class="btn btn-danger me-2" 
            @onclick="DeleteShipmentAsync">
            Delete
        </button>
        <button type="button" 
            class="btn btn-secondary me-2" 
            @onclick="CancelEdit">
            Cancel
        </button>
    }



</EditForm>

@code {
    [Parameter]
    public int? ShipmentId { get; set; }

    private bool EditMode => ShipmentId.HasValue && ShipmentId.Value > 0;

    private Shipment _currentShipment = new();
    private string _feedback = string.Empty;

    private List<Shipper> _shippers = new();

    protected override async Task OnInitializedAsync()
    {
        try 
        {
            _shippers = await CurrentShipperService.GetAllShippers();
            if (EditMode)
            {
                var existingShipment = await CurrentShipmentService.FindShipmentByShipmentId(ShipmentId!.Value);
                if (existingShipment is null)
                { 
                    _feedback = $"Shipment {ShipmentId.Value} was not found.";
                }
                else
                {
                    _currentShipment = existingShipment;
                }
            } 
            else
            {
                //_currentShipment.ShippedDate = DateTime.Today;
                _currentShipment = new Shipment
                    {
                        ShippedDate = DateTime.Today
                    };

            }

        }
        catch(Exception ex)
        {
            _feedback = $"Error initializing: {GetInnerException(ex).Message}";
        }
    }

    private async Task SaveAsync()
    {
        try 
        {
            if (EditMode)
            {
                await CurrentShipmentService.UpdateShipmentAsync(_currentShipment);
                _feedback = $"Shipment updated successfully.";
            }
            else
            {
                await CurrentShipmentService.AddShipmentAsync(_currentShipment);
                _feedback = $"Shipment created successfully with ID {_currentShipment.ShipmentID}";
                _currentShipment = new();
            }

        }
        catch(Exception ex)
        {
            _feedback = $"Error saving: {GetInnerException(ex).Message}";
        }
    }

    private async Task DeleteShipmentAsync()
    {
        bool confirmed = await CurrentJSRuntime.InvokeAsync<bool>(
                   "confirm", "Are you sure you want to delete this shipment?");
        if (confirmed)
        {
            try
            {
                if (EditMode)
                {
                    await CurrentShipmentService.DeleteShipmentAsync(ShipmentId!.Value);
                }
                CurrentNavigationManager.NavigateTo("/shipments/query");
            }
            catch(Exception ex)
            {
                _feedback = $"Error deleting: {GetInnerException(ex).Message}";
            }

        }
    }

    private async Task CancelEdit()
    {
        bool confirmed = await CurrentJSRuntime.InvokeAsync<bool>(
            "confirm", "Are you sure you want to cancel editing this shipment and navigate back to query page?");
        if (confirmed)
        {
            CurrentNavigationManager.NavigateTo("/shipments/query");
        }
    }

    private Exception GetInnerException(Exception ex)
    {
        while (ex.InnerException != null)
        {
            ex = ex.InnerException;
        }
        return ex;
    }
}
